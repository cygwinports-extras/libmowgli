DESCRIPTION="C extension library"
HOMEPAGE="http://audacious-media-player.org/"
SRC_URI="http://distfiles.atheme.org/${P}.tbz2"
PATCH_URI="0.7.0-buildsys.patch"

PKG_NAMES="${PN} ${PN}2 ${PN}-devel"
libmowgli2_CONTENTS="usr/bin/cygmowgli-2.dll usr/share/doc/"
libmowgli_devel_CONTENTS="usr/include/ usr/lib/"

NO_ACLOCAL=1

src_compile() {
	cd ${S}
	cygautoreconf
	lndirs
	cd ${B}
	cygconf
	cygmake
}

src_test() {
	cd ${B}/src/examples
	cygmake
	for x in */*.exe
	do
		echo $x:
		$x
	done
}
